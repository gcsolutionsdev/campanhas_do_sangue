    mainContext.save();

    inputs.forEach((input) => {
      setTimeout(() => input.dispatchEvent(new Event("keyup")), 100);
      setTimeout(() => input.dispatchEvent(new Event("keyup")), 300);
      setTimeout(() => input.dispatchEvent(new Event("keyup")), 500);
    });
  });
