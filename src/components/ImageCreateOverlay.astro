<style>
  .action-panel {
    /* border: 1pt solid green; */x
    width: 60%;
    gap: 10px;
    height: 8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    padding-bottom: 10px;
    .inputs {
      height: 100%;
      width: 60%;
      min-width: 250px;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      /* border: 1pt solid red; */
    }
    .buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
      justify-content: flex-end;
      height: 100%;
      width: 40%;
      /* padding-bottom: 25px; */
      /* border: 1pt solid yellow; */
    }
  }
  .overlay-canvas {
    width: 80%;
    aspect-ratio: 3 / 4;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

    canvas {
      width: 100%;
      height: 100%;
      object-fit: contain;
      position: absolute;
    }
    canvas:nth-child(1) {
      z-index: 200;
    }
    canvas:nth-child(2) {
      align-self: flex-start;
      width: 59%;
      transform: translateY(8.8%);
      height: 67%;
      z-index: 100;
    }
  }
  @media (max-width: 991px) {
    .action-panel {
      height: 10rem;
    }
    .overlay-canvas {
      canvas:nth-child(2) {
        transform: translateY(8.6%);
      }
    }
  }
  @media (max-width: 767px) {
    .overlay-canvas {
      canvas:nth-child(2) {
        transform: translateY(8.7%);
      }
    }
  }

  @media (max-width: 480px) {
    .overlay-canvas {
      max-width: 20rem;
      canvas:nth-child(2) {
        transform: translateY(8.8%);
      }
    }
    .action-panel {
      height: 10rem;
      flex-direction: column;
      margin: 20px 0;
      width: 60%;
      margin-bottom: 40px;
      .buttons {
        justify-content: center;
        flex-direction: column;
        width: 100%;
      }
    }
  }
</style>

<section class="action-panel">
  <div class="inputs">
    <label for="name">Meu nome: </label>
    <input type="text" id="name" />
    <button>
      <label for="imageInput" class="custom-image-upload">
        Selecionar minha foto ðŸ“·
