<style>
  .action-panel {
    /* border: 1pt solid green; */
    width: 60%;
    gap: 10px;
    height: 8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    .inputs {
      height: 100%;
      width: 60%;
      min-width: 250px;
      display: flex;
      flex-direction: column;
      /* border: 1pt solid red; */
    }
    .buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
      justify-content: flex-end;
      height: 100%;
      width: 40%;
      padding-bottom: 25px;
      /* border: 1pt solid yellow; */
    }
  }
  .overlay-canvas {
    width: 60%;
    position: relative;
    height: 45rem;
    display: flex;
    justify-content: center;

    .user-image {
      position: absolute;
      z-index: 100;
      background-color: red;
      width: 80%;
      height: 68%;
      margin-top: 40px;
    }
  }
  @media (max-width: 680px) {
    .overlay-canvas {
      width: 100%;
      height: 40rem;

      .user-image {
        margin-top: 35px;
      }
    }
    .action-panel {
      width: -webkit-fill-available;
    }
  }
  @media (max-width: 480px) {
    .overlay-canvas {
      width: 100%;
    }
    .action-panel {
      flex-direction: column;
      margin: 20px 0;
      .buttons {
        justify-content: center;
        flex-direction: row;
      }
    }
  }
</style>

<section class="action-panel">
  <div class="inputs">
    <label for="name">Nome: </label>
    <input type="text" id="name" />
    <label for="doacoes">Quantidade de doações:</label>
    <input type="number" id="doacoes" />
  </div>

  <div class="buttons">
    <button class="save">Salvar Imagem 💾</button>
    <button>
      <label for="imageInput" class="custom-image-upload">
        Selecione uma foto 📷
      </label>
    </button>

    {canShare && <button class="share">Compartilhar Imagem 🔗</button>}

    <input
      type="file"
      id="imageInput"
      class="imageInput"
      accept="image/*"
      style="display: none;"
    />
  </div>
</section>

<section class="overlay-canvas">
  <canvas
    width="600"
    height="1067"
    style="width: 100%; height: 100%; position: absolute; z-index: 200;"
    data-src={src}
    data-options={JSON.stringify(config)}></canvas>
  <div class="user-image"></div>
</section>

